<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <bean id="myBeanSetterInjection" class="cz.sweb.pichlik.springioc.xml.MyBean">
        <!-- injection via setter -->
        <property name="dependencyA" ref="dependencyA"/>
    </bean>
    
    <bean id="myBeanConstructorInjection" class="cz.sweb.pichlik.springioc.xml.MyBean">
        <!-- injection via constructor -->
        <constructor-arg ref="dependencyA" />       
    </bean>    
    
    <bean id="dependencyA" class="cz.sweb.pichlik.springioc.xml.DependencyA"/>
    
</beans>
